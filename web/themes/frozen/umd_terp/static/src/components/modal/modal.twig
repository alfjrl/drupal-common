<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#{{id}}">
  Launch demo modal
</button>

<div class="modal{% if fade %} fade{% endif %}" id="{{id}}" tabindex="-1" role="dialog" aria-labelledby="{{id}}-title" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-title" id="{{id}}-title">{{title}}</div>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {{content|raw}}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">Save changes</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>