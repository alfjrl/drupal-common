{% set sidebar_attribute = create_attribute() %}

{%
  set sidebar_classes = [
    'row',
		'justify-content-center',
    right_sidebar ? 'flex-row-reverse',
		right_sidebar ? 'hide-subnav-icon',
  ]
%}

{% include directory ~ '/templates/_includes/global/header.html.twig' %}

<main id="main-content">
	{% block header_alert %}
		<div id="header-alerts">
      <div class="container">
			   {{ page.header_alerts }}
      </div>
		</div>
	{% endblock %}
	{% block hero %}
		{% if hero_image %}
			<div class="hero">
				<div class="hero-media">
					<img src="{{ hero_image }}" alt="{{ hero_alt }}">
				</div>
			</div>
		{% endif %}
	{% endblock %}
	{% block main %}
		<div class="container page-content">
			{{ page.help }}
			{{ page.highlighted }}
			<div {{sidebar_attribute.addClass(sidebar_classes)}}>
				{% if page.sidebar|render|striptags|trim is not empty and not hide_sidebar %}
					{% block sidebar %}
						<div class="col-800-3">
							{{ page.sidebar }}
						</div>
					{% endblock %}
				{% endif %}
				<div class="col-800-9">
					{{ page.breadcrumbs }}
					{{ page.content }}
					{% if page.bento_1 %}
						<div class="row" id="bento-blocks">
							<div class="bento-results">
								<div id="bento-result-1" class="col-1200-4 col-900-6 col-600-12 bento-result">
									{{ page.bento_1 }}
								</div>
								{% if page.bento_2 %}
									<div id="bento-result-2" class="col-1200-4 col-900-6 col-600-12 bento-result">
										{{ page.bento_2 }}
									</div>
								{% endif %}
								{% if page.bento_3 %}
									<div id="bento-result-3" class="col-1200-4 col-900-6 col-600-12 bento-result">
										{{ page.bento_3 }}
									</div>
								{% endif %}
							</div>
							<div class="bento-results">
								{% if page.bento_4 %}
									<div id="bento-result-4" class="col-1200-4 col-900-6 col-600-12 bento-result">
										{{ page.bento_4 }}
									</div>
								{% endif %}
								{% if page.bento_5 %}
									<div id="bento-result-5" class="col-1200-4 col-900-6 col-600-12 bento-result">
										{{ page.bento_5 }}
									</div>
								{% endif %}
								{% if page.bento_6 %}
									<div id="bento-result-6" class="col-1200-4 col-900-6 col-600-12 bento-result">
										{{ page.bento_6 }}
									</div>
								{% endif %}
							</div>
							<div class="bento-results">
								{% if page.bento_7 %}
									<div id="bento-result-7" class="col-1200-4 col-900-6 col-600-12 bento-result">
										{{ page.bento_7 }}
									</div>
								{% endif %}
								{% if page.bento_8 %}
									<div id="bento-result-8" class="col-1200-4 col-900-6 col-600-12 bento-result">
										{{ page.bento_8 }}
									</div>
								{% endif %}
								{% if page.bento_9 %}
									<div id="bento-result-9" class="col-1200-4 col-900-6 col-600-12 bento-result">
										{{ page.bento_9 }}
									</div>
								{% endif %}
							</div>
						</div>
					{% endif %}
				</div>
			</div>
		</div>
	{% endblock %}
</main>

