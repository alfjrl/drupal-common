{#
/**
 * @file
 * Theme override to display a UMD Terp Article node Teaser.
 */
#}
<div class="feed-item">
  <div class="row no-gutters align-items-start">
    <div class="col">
      <div class="feed-item-body">
        <div class="feed-item-date">{{ content.field_umdt_ct_article_date|field_value }}</div>
        <h2 class="feed-item-title">
          <a href="{{ link }}">{{ node.title.value }}</a>
        </h2>
        <div class="feed-item-description">
          {% if content.field_umdt_ct_article_image|field_value %}
            <div class="news-article-teaser-image">
              <img src="{{ file_url(content.field_umdt_ct_article_image[0]['#media'].field_media_image.entity.uri.value | image_style('optimized')) }}" alt="{{ content.field_umdt_ct_article_image[0]['#media'].field_media_image.alt }}"/>
            </div>
          {% endif %}
          <p>{{ content.body|render|striptags }}</p>
        </div>
      </div>
    </div>
  </div>
</div>
