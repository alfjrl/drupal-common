{#
/**
 * @file
 * Theme override to display a UMD Terp Basic Page node.
 */
#}

<div {{attributes}}>
	{{ title_suffix }}
	<div class="editor-content">
		{% if umd_terp_disable_title == false %}
			<h1>{{ node.title.value }}</h1>
		{% endif %}
		{% if content.body|field_value %}
			{{ content.body|field_value }}
		{% endif %}
	</div>
</div>
<div id="terp-page-content">
{{ content|without('body', 'field_umdt_ct_hero_image', 'field_umdt_ct_hide_sidebar') }}
</div>
