{#
/**
 * @file
 * Basic viewer for Mirador
 *
 * Variables:
 * - object_id
 * - iiif_server
 * - error_message
 */
#}
{{ attach_library('mirador_viewer/mirador-styles') }}
{{ attach_library('clipboardjs/clipboardjs') }}
<iframe class="mirador-viewer" style="width: 100%; height: 700px;" title="Mirador Object"
src="{{ iiif_server }}{{ iiif_viewer }}?manifest=fcrepo:{{ collection_id }}::{{ object_id }}&iiifURLPrefix={{ iiif_server|replace({'https://':''}) }}manifests/&q={{ query }}" scrolling="no" allowfullscreen="true" webkitallowfullscreen="true" mozallowfullscreen="true">{{ error_message }}</iframe>
